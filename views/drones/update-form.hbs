<h2>Update your Drone</h2>


<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Update {{name}}</h1>

            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="title" value="{{name}}">
                </div>


                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="description" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="description" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Update Drone</button>
                </div>

            </form>